#!/bin/bash

buildDir=$1;
cacheDir=$2;
binDir=$buildDir/bin

if [ ! -s $1/.binurls ]; then
  echo "-----> Skipping empty .binurls file"
  exit 0
fi

mkdir -p $binDir
cd $cacheDir

read_url() {
  url=$1;
  echo "-----> Reading \"$url\""

  file=$(basename $url)
  file=${file%%.*}

  if [ -f $cacheDir/$file ]; then
    echo "-----> Found $file in cache"
  else
    echo "-----> Downloading \"$url\""
    curl -sL $url | tar xz
  fi

  echo "-----> Copying $file to $binDir"
  cp $file $binDir
}

while read url; do
  if [ -n "$url" ]; then
    read_url $url
  fi
done < $buildDir/.binurls
